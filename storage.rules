rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Courses folder - authenticated users can read, write
    match /courses/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Course materials folder - authenticated users can read, write
    match /course-materials/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // User profile images
    match /profiles/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
    
    // Quiz attachments
    match /quizzes/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Hero images for homepage - public read, admin write
    match /hero-images/{allPaths=**} {
      allow read: if true; // Public read access for landing page
      allow write: if request.auth != null && 
                      get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // News images - public read, admin write
    match /news-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                      get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Clubs images - public read, admin write
    match /clubs-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                      get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Gallery images - public read, admin write
    match /gallery-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                      get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
